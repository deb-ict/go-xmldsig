    "version": "0.2.0",
    "configurations": [
        {
            "name": "Signer",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/signer",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Validator",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/validator",
            "cwd": "${workspaceFolder}",
            "args": ["-xml", "test.xml", "-pem", "test.pem"]
        }
    ]
}
